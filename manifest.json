{
  "manifest_version": 2,
  "name": "Voyager as a Sidebar",
  "description": "Displays a sidebar that lets you browse lemmy instances using Voyager app.",
  "version": "1.0",
  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },
  "icons": {
    "512": "icons/icon512.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Opens and closes Voyager sidebar"
    }
  },
  "sidebar_action": {
    "default_icon": {
      "512": "icons/icon512.png"
    },
    "default_title": "Voyager",
    "default_panel": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "menus"
  ]
}
